{
  "manifest_version": 2,
  "name": "Local Page Archiver",
  "version": "0.1",
  "description": "Save raw HTML of every page you open, locally only.",
  "icons": { "128": "icon128.png" },
  "permissions": ["storage", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_end"
  }]
}
