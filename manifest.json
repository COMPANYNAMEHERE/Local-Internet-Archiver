{
  "manifest_version": 2,
  "name": "Local Internet Archiver",
  "version": "0.1.0",
  "description": "Locally store the raw HTML of pages you visit.",
  "permissions": ["storage", "tabs", "<all_urls>"],
  "background": { "scripts": ["background.js"], "persistent": false },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
